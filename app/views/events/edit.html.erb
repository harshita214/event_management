<h1>Edit Event</h1>

<% if policy(@event).edit? %>
  <%= link_to 'Edit Event', edit_event_path(@event) , class: 'edit-link' %>
<% end %>


<%= form_with(model: @event, local: true, class: 'event-form') do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Event' %>
  </div>
<% end %>

<%= link_to 'Back', event_path(@event), class: 'back-link' %>
